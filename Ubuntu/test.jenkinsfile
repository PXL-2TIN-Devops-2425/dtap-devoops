pipeline {
    agent any
    tools { 
        nodejs "TINnode-devops"
    }
    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        stage('Fetch App Code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Artifact') {
            steps {
                script {
                    docker.build('11502188/devoops:testbuild') // Gebruik een unieke tag zoals 'testbuild'
                }
            }
        }
        stage('Push Artifact') {
            steps {
                script {
                    sh '''
                    docker login
                    docker push 11502188/devoops:testbuild
                    '''
                }
            }
        }
        stage('Deployment') {
            steps {
                script {
                    sh '''
                    docker ps -q --filter "name=test_container" | grep -q . && docker stop test_container && docker rm test_container || true
                    
                    docker pull 11502188/devoops:testbuild
                    
                    docker run -d --name test_container -p 3000:3000 11502188/devoops:testbuild
                    '''
                }
            }
        }
    }
}